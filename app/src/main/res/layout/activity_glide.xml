<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <demo.huangli.mydemosnew.ui_set_1.glide.MyLayout
        android:id="@+id/myLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></demo.huangli.mydemosnew.ui_set_1.glide.MyLayout>

    <Button
        android:id="@+id/btn_simple_target"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="simpleTarget"/>

    <Button
        android:id="@+id/btn_view_target"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="viewTarget"/>

    <Button
        android:id="@+id/btn_preLoad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="preLoad"/>

    <Button
        android:id="@+id/btn_download_only_width_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DownloadOnlyByWidthHeight"/>

    <Button
        android:id="@+id/btn_download_only_target"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DownloadOnlyByTarget"/>

    <Button
        android:id="@+id/btn_listener"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Listener"
        />

    <Button
        android:text="圆图裁减"
        android:id="@+id/btn_circle_crop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:text="模糊变换"
        android:id="@+id/btn_transformation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>